# ===========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===========================================

# Backend Configuration
NODE_ENV=production
PORT=5000

# Security Configuration  
WEBHOOK_SECRET=your-production-webhook-secret-change-this-to-very-secure-key

# Database Configuration
DATABASE_PATH=./database.sqlite

# CORS Configuration (Add your domain)
CORS_ORIGIN=https://your-domain.com,http://your-ec2-ip

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend Configuration
REACT_APP_BACKEND_URL=https://your-domain.com
REACT_APP_ENV=production

# Optional: SSL Configuration (if using custom SSL)
SSL_CERT_PATH=/etc/ssl/certs/your-cert.pem
SSL_KEY_PATH=/etc/ssl/private/your-key.pem

# Optional: Database Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Optional: Monitoring
HEALTH_CHECK_INTERVAL=30
LOG_LEVEL=info

# Optional: Google Apps Script Configuration
GOOGLE_APPS_SCRIPT_ALLOWED_IPS=64.18.0.0/20,64.233.160.0/19,66.102.0.0/20
