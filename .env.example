# Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Backend Configuration
BACKEND_PORT=6867
BACKEND_HOST=localhost
NODE_ENV=development

# Frontend Configuration  
FRONTEND_PORT=6868
FRONTEND_HOST=localhost
REACT_APP_BACKEND_URL=http://localhost:6867

# Database Configuration
DATABASE_PATH=./backend/database.sqlite

# Security Configuration (REQUIRED for production)
HMAC_SECRET=your-secret-key-here-please-change-this-to-a-strong-secret
API_SECRET=your-api-secret-here-please-change-this-to-a-strong-secret
WEBHOOK_SECRET=your-webhook-secret-here-please-change-this-to-a-strong-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
FRONTEND_URL=http://localhost:6868

# CORS & Security Policy (Development vs Production)
# Set to 'true' to allow all origins (*) - USE WITH CAUTION IN PRODUCTION
ALLOW_ALL_ORIGINS=true
# Specific origins (comma-separated) - used when ALLOW_ALL_ORIGINS=false
CORS_ORIGINS=http://localhost:6868,http://localhost:3000,https://your-domain.com

# IP Access Control
# Set to 'true' to allow all IPs (*) - USE WITH CAUTION IN PRODUCTION  
ALLOW_ALL_IPS=true
# Specific IPs (comma-separated) - used when ALLOW_ALL_IPS=false
ALLOWED_IPS=127.0.0.1,::1,192.168.1.0/24

# ===========================================
# PRODUCTION CONFIGURATION
# ===========================================
# Uncomment and modify for production deployment

# NODE_ENV=production
# PORT=6867

# Security Configuration  
# WEBHOOK_SECRET=your-production-webhook-secret-change-this-to-very-secure-key

# CORS & Security Policy (Production)
# ALLOW_ALL_ORIGINS=false
# CORS_ORIGINS=https://your-domain.com,https://your-cdn.com
# ALLOW_ALL_IPS=false  
# ALLOWED_IPS=your-server-ip,your-cdn-ip

# Rate Limiting (stricter for production)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# Frontend Configuration
# REACT_APP_BACKEND_URL=https://your-domain.com
# REACT_APP_ENV=production

# Optional: SSL Configuration (if using custom SSL)
# SSL_CERT_PATH=/etc/ssl/certs/your-cert.pem
# SSL_KEY_PATH=/etc/ssl/private/your-key.pem

# Optional: Database Backup
# BACKUP_SCHEDULE=0 2 * * *
# BACKUP_RETENTION_DAYS=30

# Optional: Monitoring
# HEALTH_CHECK_INTERVAL=30
# LOG_LEVEL=info

# Optional: Google Apps Script Configuration
# GOOGLE_APPS_SCRIPT_ALLOWED_IPS=64.18.0.0/20,64.233.160.0/19,66.102.0.0/20
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Google Apps Script Configuration
# Webhook URL that Google Apps Script will call
WEBHOOK_URL=http://localhost:5000/api/webhook

# Development Configuration
NODE_ENV=development

# Logging Level (error, warn, info, debug)
LOG_LEVEL=info

# API Configuration
REACT_APP_BACKEND_URL=http://localhost:5000
REACT_APP_API_TIMEOUT=10000
REACT_APP_POLL_INTERVAL=2000

# Feature Flags
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_SOUND=false

# Production Security (uncomment for production)
# NODE_ENV=production
# HMAC_SECRET=generate-a-strong-256-bit-secret-key
# API_SECRET=generate-another-strong-secret-key
# FRONTEND_URL=https://your-frontend-domain.com
# WEBHOOK_URL=https://your-backend-domain.com/api/webhook
# REACT_APP_BACKEND_URL=https://your-backend-domain.com

# Optional: External Services
# GOOGLE_SHEET_ID=your-google-sheet-id
# GOOGLE_API_KEY=your-google-api-key

# Optional: Email notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
