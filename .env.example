# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Backend Configuration
BACKEND_PORT=5000
BACKEND_HOST=localhost

# Frontend Configuration  
FRONTEND_PORT=3000
FRONTEND_HOST=localhost

# Database Configuration
DATABASE_PATH=./backend/database.sqlite

# Security Configuration (REQUIRED for production)
HMAC_SECRET=your-secret-key-here-please-change-this-to-a-strong-secret
API_SECRET=your-api-secret-here-please-change-this-to-a-strong-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Google Apps Script Configuration
# Webhook URL that Google Apps Script will call
WEBHOOK_URL=http://localhost:5000/api/webhook

# Development Configuration
NODE_ENV=development

# Logging Level (error, warn, info, debug)
LOG_LEVEL=info

# API Configuration
REACT_APP_BACKEND_URL=http://localhost:5000
REACT_APP_API_TIMEOUT=10000
REACT_APP_POLL_INTERVAL=2000

# Feature Flags
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_SOUND=false

# Production Security (uncomment for production)
# NODE_ENV=production
# HMAC_SECRET=generate-a-strong-256-bit-secret-key
# API_SECRET=generate-another-strong-secret-key
# FRONTEND_URL=https://your-frontend-domain.com
# WEBHOOK_URL=https://your-backend-domain.com/api/webhook
# REACT_APP_BACKEND_URL=https://your-backend-domain.com

# Optional: External Services
# GOOGLE_SHEET_ID=your-google-sheet-id
# GOOGLE_API_KEY=your-google-api-key

# Optional: Email notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
